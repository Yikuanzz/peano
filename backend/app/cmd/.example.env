# HTTP 配置
# HTTP 端口
HTTP_PORT=8080

# GIN 模式 (debug, release, test)
GIN_MODE=debug

# 管理员账户
ADMIN_USERNAME=admin
ADMIN_PASSWORD=12345678

# 存储配置
# 存储类型 (local, oss)
STORAGE_TYPE=local
# 本地存储路径
STORAGE_LOCAL_PATH=./uploads
# 本地存储访问URL（可选，用于生成文件访问链接）
STORAGE_LOCAL_BASE_URL=http://localhost:8080/uploads

# 本地存储访问URL（可选，用于生成文件访问链接）
# STORAGE_LOCAL_BASE_URL=http://localhost:8080/uploads

# OSS 配置（当 STORAGE_TYPE=oss 时使用）
# OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your-access-key-id
# OSS_ACCESS_KEY_SECRET=your-access-key-secret
# OSS_BUCKET_NAME=your-bucket-name
# OSS_BASE_URL=https://your-bucket-name.oss-cn-hangzhou.aliyuncs.com

# JWT 配置
# JWT Secret (建议使用强随机字符串)
JWT_SECRET=your-secret-key-here-change-in-production

# AccessToken 过期时间 (例如: 2h, 30m, 24h)
ACCESS_TOKEN_EXPIRE=24h

# RefreshToken 过期时间 (例如: 7d, 30d, 168h)
REFRESH_TOKEN_EXPIRE=168h

# 日志配置
# 日志级别 (trace, debug, info, notice, warn, error, fatal)
# 默认值: info
LOG_LEVEL=info

# 日志输出方式 (console, json)
# 默认值: console
LOG_OUTPUT=console

# 是否为开发模式 (true, false)
# 默认值: false
LOG_DEVELOPMENT=false

# 日志文件路径 (如果设置，日志会同时输出到 stdout 和该文件)
# 如果不设置，只输出到 stdout（适合容器化部署）
# 默认值: 空（只输出到 stdout）
# LOG_FILE=./logs/app.log

# 单个日志文件的最大大小（MB）
# 当日志文件达到此大小时，会自动轮转
# 默认值: 100
LOG_MAX_SIZE=100

# 保留的旧日志文件数量
# 默认值: 7
LOG_MAX_BACKUPS=7

# 日志文件保留天数
# 超过此天数的旧日志文件会被自动删除
# 默认值: 30
LOG_MAX_AGE=30

# 是否压缩轮转后的旧日志文件 (true, false)
# 默认值: true
LOG_COMPRESS=true

# SQLite 数据库配置
# SQLite 数据库文件路径
# 默认值: data.db
SQLITE_DB_PATH=data.db

# 最大空闲连接数
# 默认值: 10
SQLITE_MAX_IDLE_CONNS=10

# 最大打开连接数
# 默认值: 100
SQLITE_MAX_OPEN_CONNS=100

# 连接最大生存时间（分钟）
# 默认值: 60
SQLITE_CONN_MAX_LIFETIME_MIN=60

# 连接最大空闲时间（分钟）
# 默认值: 10
SQLITE_CONN_MAX_IDLE_TIME_MIN=10

# 是否启用慢查询日志 (true, false)
# 默认值: false
SQLITE_ENABLE_SLOW_QUERY_LOG=false

# 慢查询阈值（毫秒）
# 默认值: 200
SQLITE_SLOW_QUERY_THRESHOLD=200

